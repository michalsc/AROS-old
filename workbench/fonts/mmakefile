# $Id$
CURDIR=workbench/fonts

include $(TOP)/config/make.cfg

FONTSDIR=$(BINDIR)/Fonts

FONTS=fixed

#MM workbench-fonts : setup
workbench-fonts: $(FONTS)
	@$(FOR) dir in $(FONTS) ; do $(CP) -rpf $$dir $(FONTSDIR) ; \
	done

#MM
setup :
	$(IF) $(TEST) ! -d $(FONTSDIR) ; then $(MKDIR) $(FONTSDIR) ; else $(NOP) ; fi ;

