	date \
	delete \
	devlist \
	dir \
	echo \
	execute \
	liblist \
	makedir \
	mount \
	newshell \
	path \
	rename \
	reslist \
	run \
	shell \
	setclock \
	setlocale \
	sort \
	tasklist \
	crlist \
	stacksnoop \
	damagelist \
	type \
	wait \
	why \
	AddDatatypes \
	Alias \
	Break \
	ChangeTaskPri \
	Copy \
	Else \
	EndIf \
	EndSkip \
	FailAt \
	Fault \
	Filenote \
	Get \
	Getenv \
	If \
	Join \
	Lab \
	List \
	Lock \
	Prompt \
	Protect \
	Quit \
	RequestChoice \
	RequestFile \
