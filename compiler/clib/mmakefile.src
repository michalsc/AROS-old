ASMFILES := setjmp longjmp

OBJS := $(foreach f,$(FILES) $(ASMFILES),$(OBJDIR)/$(f).o)
DEPS := $(foreach f,$(FILES),$(OBJDIR)/$(f).d)

#MM linklibs : setup includes clib-$(ARCH)
linklibs : show-flags $(LIB)
	@$(NOP)

show-flags :
	@echo "APPCFLAGS=$(APPCFLAGS)"

#MM
setup :
	%mkdirs_q $(INCDIR)/sys $(OBJDIR)

#MM
check : $(TESTDIR)/snprint

$(TESTDIR)/snprintf : snprintf.c $(LIBDIR)/startup.o $(DEPLIBS)
	$(CC) -DTEST $(ILDFLAGS) $(LIBDIR)/startup.o $< -o $@ $(LIBS)

#MM
clean ::
	-$(RM) $(OBJDIR) *.err $(LIB)

$(OBJDIR)/%.o : %.c
	%compile_q cmd=$(SYS_CC) opt=$(APPCFLAGS)

$(LIB) : $(OBJS)
	%mklib_q

$(OBJDIR)/%.d : %.c
	%mkdepend_q flags=$(APPCFLAGS)

%common
%include_deps
